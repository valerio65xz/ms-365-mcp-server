{
  "name": "@softeria/ms-365-mcp-server",
  "version": "0.4.2",
  "description": "Microsoft 365 MCP Server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ms-365-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
