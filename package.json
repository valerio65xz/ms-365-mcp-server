    "inspect": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "microsoft",
    "365",
    "mcp",
    "server"
  ],
  "author": "",
  "license": "MIT",
